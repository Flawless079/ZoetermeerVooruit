{% extends "@Main/base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/main/css/landingpagina.css') }}">
{% endblock %}

{% block body %}

    {#Social Media, negeer dit maar niet verwijderen#}

    <div id="fb-root"></div>
