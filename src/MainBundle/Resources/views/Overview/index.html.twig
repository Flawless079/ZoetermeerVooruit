{% extends "@Main/base.html.twig" %}

{% block body %}
    {% if is_granted ('ROLE_ADMIN') %}
        <br><br>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <div class="row">
                        <div class="col-sm-10">
                            <h3>Enquete aanmaken</h3>
                                <a href="{{ path('enquete_new') }}" class="btn btn-success" role="button">+ Enquete</a>
                                <a href="{{ path('enquete_index') }}" class="btn btn-default" role="button">Ga naar enquete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <div class="row">
                        <div class="col-sm-10">
                            <h3>Vraag aanmaken</h3>
                            <a href="{{ path('question_new') }}" class="btn btn-success" role="button">+ Vraag</a>
                            <a href="{{ path('question_index') }}" class="btn btn-default" role="button">Ga naar vragen</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <div class="row">
                        <div class="col-sm-10">
                            <h3>Antwoord aanmaken</h3>
                            <a href="{{ path('choice_new') }}" class="btn btn-success" role="button">+ Antwoord</a>
                            <a href="{{ path('choice_index') }}" class="btn btn-default" role="button">Ga naar antwoorden</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <h2>Gebruikers</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Voornaam</th>
                        <th>Achternaam</th>
                        <th>Geslacht</th>
                        <th>Geboortedatum</th>
                        <th>Adres</th>
                        <th>Postcode</th>
                        <th>Woonplaats</th>
                        <th>Telefoonnummer</th>
                        <th>Bankrekening</th>
                        <th>Beheeracties</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.gender }}</td>
                        <td>{% if user.birthdate %}{{ user.birthdate|date('d-m-Y') }}{% endif %}</td>
                        <td>{{ user.address }}</td>
                        <td>{{ user.postal }}</td>
                        <td>{{ user.city }}</td>
                        <td>{{ user.phone }}</td>
                        <td>{{ user.bankaccount }}</td>
                        <td>
                            <a class="btn btn-info" href="{{ path('user_show', { 'id': user.id }) }}">Weergeven</a>

                            <a class="btn btn-primary" href="{{ path('user_edit', { 'id': user.id }) }}">Aanpassen</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    {% else %}
        <div>
            <h3>Helaas, u kunt deze pagina niet bekijken.</h3>
            <p>Log in als Administrator om de pagina weer te geven.</p>
        </div>
    {% endif %}

{% endblock %}