<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/main/images/ZVLogo-kleineversie.png') }}" />

    <title>{% block title %}Welcome!{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('bundles/main/css/bootstrap.min.css') }}" rel="stylesheet">
    <!-- Bootstrap theme -->
    <link href="{{ asset('bundles/main/css/bootstrap-theme.min.css') }}" rel="stylesheet">
    <!-- Own base theme -->
    <link rel="stylesheet" href="{{ asset('bundles/main/css/style.css') }}">
    {% block stylesheets %}{% endblock %}

</head>

<body>

<!-- Fixed navbar -->
<nav class="navbar navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"><img src="{{ asset('bundles/main/images/ZVLogo-kleineversie.png') }}"></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                {% if app.user %}
                    <li {% if app.request.attributes.get( '_route' ) starts with 'login' %} class="active" {% endif %}><a href="{{ path('fos_user_security_login') }}">Home</a></li>
                    <li {% if app.request.attributes.get( '_route' ) starts with 'enquete' %} class="active" {% endif %}><a href="{{ path('enquete_index') }}">Enquetes</a></li>
                    <li {% if app.request.attributes.get( '_route' ) starts with 'logout' %} class="active" {% endif %}><a href="{{ path('fos_user_security_logout') }}">Log uit</a></li>
                {% else %}
                    <li {% if app.request.attributes.get( '_route' ) starts with 'login' %} class="active" {% endif %}><a href="{{ path('fos_user_security_login') }}">Log in</a></li>
                {% endif %}
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container theme-showcase" role="main">

    {% block body %}{% endblock %}
    {% block fos_user_content %}{% endblock fos_user_content %}

</div> <!-- /container -->


<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

<script src="{{ asset('bundles/main/js/bootstrap.min.js') }}"></script>

{% block javascripts %}{% endblock %}

</body>
</html>
