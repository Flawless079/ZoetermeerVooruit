{% extends '@Main/base.html.twig' %}

{% block body %}
    {% if app.user %}
        <h1>Enquetes</h1>

        <div class="row">
            {% for enquete in enquetes %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <div class="row">
                                <div class="col-sm-10">
                                    <h3>{{ enquete.title }}</h3>
                                    <p>{{ enquete.description }}</p>
                                    <p>
                                        <a href="{{ path('enquete_edit', { 'id': enquete.id }) }}" class="btn btn-primary" role="button">Aanpassen</a>
                                        <a href="{{ path('enquete_show', { 'id': enquete.id }) }}" class="btn btn-info" role="button">Weergeven</a>
                                    </p>
                                </div>
                                <div class="col-sm-2">
                                    {%  if enquete.published %} <img class="vinkje" src="{{ asset('bundles/main/images/vinkje.png') }}" />{% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a class="pull-left btn btn-success" href="{{ path('enquete_new') }}">Maak een nieuwe enquete</a>

    {% else %}
        <div>
            <h3>Helaas, u kunt deze pagina niet bekijken.</h3>
            <p>Log in als Administrator om de pagina weer te geven.</p>
        </div>
    {% endif %}
{% endblock %}
