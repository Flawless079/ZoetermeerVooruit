{% extends '@Main/base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Fractie lijst</h1>
            <div class="row">
                {% for fractie in fracties %}
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <div class="caption">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <h3>{{ fractie.name }}</h3><br>
                                        <div style="font-size: medium">
                                            {{ fractie.description|striptags|truncate(350, true, "...")|raw }}<br>
                                        </div>
                                        <a href="{{ path('info_show', { 'id': info.id }) }}" class="btn btn-info btn-xs">Meer lezen</a>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a href="{{ path('info_edit', { 'id': info.id }) }}" class="btn btn-primary btn-xs">edit</a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
    </div>
{% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-success" href="{{ path('fractie_new') }}">+ Fractie</a>
{% endif %}
{% endblock %}
