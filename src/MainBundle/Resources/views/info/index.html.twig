{% extends '@Main/base.html.twig' %}

{% block body %}
    {% if is_granted ('ROLE_ADMIN') %}

    <div class="container">
        <h1>Informatiepagina</h1>
            <div class="row">
                {% for info in infos %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <div class="row">
                                <div class="col-sm-10">
                                    <h4>{{ info.name }}</h4><br>
                                    {{ info.description }}<br>
                                    <a href="{{ path('info_show', { 'id': info.id }) }}" class="btn btn-info btn-xs">show</a>
                                    <a href="{{ path('info_edit', { 'id': info.id }) }}" class="btn btn-primary btn-xs">edit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        <a href="{{ path('info_new') }}" class="btn btn-success"> + Info</a>
    </div>

    {% else %}
        <div>
            <h3>Helaas, u kunt deze pagina niet bekijken.</h3>
            <p>Log in als Administrator om de pagina weer te geven.</p>
        </div>
    {% endif %}
{% endblock %}
