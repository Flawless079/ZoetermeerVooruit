{% extends '@Main/base.html.twig' %}

{% block body %}
    <h1>Informatiepagina</h1>

        {% for info in infos %}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <div class="row">
                        <div class="col-sm-10">
                            <h4>{{ info.name }}</h4><br>
                            {{ info.description }}<br>
                            <a href="{{ path('info_show', { 'id': info.id }) }}" class="btn btn-info btn-xs">show</a>
                            <a href="{{ path('info_edit', { 'id': info.id }) }}" class="btn btn-primary btn-xs">edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
        <a href="{{ path('info_new') }}" class="btn btn-info">Create a new info</a>
{% endblock %}
