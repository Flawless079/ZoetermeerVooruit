{% extends '@Main/base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/main/css/button.css') }}">
{% endblock %}

{% block body %}
    {% if is_granted ('ROLE_ADMIN') %}
        <div class="container">
    <h1>Info</h1>

    <table class=" table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ info.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ info.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ info.description }}</td>
            </tr>
        </tbody>
    </table>


            <a class="btn btn-default" href="{{ path('info_index') }}">Terug naar overzicht</a>

            <a class="btn btn-primary" href="{{ path('info_edit', { 'id': info.id }) }}">Wijzigen</a>

            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Verwijderen">
            {{ form_end(delete_form) }}
        </div>
    {% else %}
        <div>
            <h3>Helaas, u kunt deze pagina niet bekijken.</h3>
            <p>Log in als Administrator om de pagina weer te geven.</p>
        </div>
    {% endif %}
{% endblock %}
