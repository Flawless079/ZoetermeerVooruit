{% extends '@Main/base.html.twig' %}

{% block body %}
    {% if is_granted ('ROLE_ADMIN') %}
        <h1>Payments list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Userid</th>
                <th>Date</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td><a href="{{ path('payment_show', { 'id': payment.id }) }}">{{ payment.id }}</a></td>
                <td>{{ payment.userId }}</td>
                <td>{% if payment.date %}{{ payment.date|date('d-m-Y') }}{% endif %}</td>
                <td>&euro;{{ payment.amount }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('payment_show', { 'id': payment.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('payment_edit', { 'id': payment.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('payment_new') }}">Create a new payment</a>
        </li>
    </ul>
    {% else %}
        <div>
            <h3>Helaas, u kunt deze pagina niet bekijken.</h3>
            <p>Log in als Administrator om de pagina weer te geven.</p>
        </div>
    {% endif %}
{% endblock %}
