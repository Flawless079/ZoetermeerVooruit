{% extends '@Main/base.html.twig' %}

{% block body %}
    <h1>Raadswerk</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ raadswerk.id }}</td>
            </tr>
            <tr>
                <th>Titel</th>
                <td>{{ raadswerk.name }}</td>
            </tr>
            <tr>
                <th>Beschrijving</th>
                <td>{{ raadswerk.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('raadswerk_index') }}">Terug naar overzicht</a>
        </li>
        <li>
            <a href="{{ path('raadswerk_edit', { 'id': raadswerk.id }) }}">Aanpassen</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
