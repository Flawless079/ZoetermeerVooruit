{% extends '@Main/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/main/css/button.css') }}">
{% endblock %}

{% block body %}
    {% if is_granted ('ROLE_ADMIN') %}
    <h1>Gebruikerslijst</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Voornaam</th>
                <th>Achternaam</th>
                <th>Geslacht</th>
                <th>Geboortedatum</th>
                <th>Adres</th>
                <th>Postcode</th>
                <th>Woonplaats</th>
                <th>Telefoonnummer</th>
                <th>Bankrekening</th>
                <th>Beheeracties</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.gender }}</td>
                <td>{% if user.birthdate %}{{ user.birthdate|date('d-m-Y') }}{% endif %}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.postal }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.bankaccount }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('user_show', { 'id': user.id }) }}">Weergeven</a>

                    <a class="btn btn-primary" href="{{ path('user_edit', { 'id': user.id }) }}">Aanpassen</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% else %}
        <div>
            <h3>Helaas, u kunt deze pagina niet bekijken.</h3>
            <p>Log in als Administrator om de pagina weer te geven.</p>
        </div>
    {% endif %}
{% endblock %}
